<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="{{ asset('front/dist/css/bootstrap.css') }}">

        <!-- Optional theme -->
        <link rel="stylesheet" href="{{ asset('front/dist/css/bootstrap-theme.css') }}">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">


        <!-- icone social media -->
        <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">


    </head>
    <body>
        <div class="container">
            {% if app.security.token is not null and is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <div class="row">
                    <nav class="navbar navbar-default">
                        <div class="container-fluid">
                            <!-- Brand and toggle get grouped for better mobile display -->
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                                <a class="navbar-brand" href="/">Speak It</a>
                            </div>
                            <!-- Collect the nav links, forms, and other content for toggling -->
                            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                                <ul class="nav navbar-nav navbar-right">
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ app.user.username }}<span class="caret"></span></a>
                                        <ul class="dropdown-menu">
                                            <li><a href="{{ path('fos_user_profile_show') }}">My Profile</a></li>
                                            <li><a href="{{ path('chat_list') }}">Discussions</a></li>
                                            <li><a href="#">Contacts</a></li>
                                        </ul>
                                    </li>
                                    <li><a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a></li>
                                </ul>
                            </div><!-- /.navbar-collapse -->
                        </div><!-- /.container-fluid -->
                    </nav>
                </div>
            {% else %}
                <div class="row edu-nav">
                    <div class="col-md-12">
                        <img class="eduspeak-logo" src="" />
                        <h1><a class="home-link" href="/">Speak It</a></h1>
                    </div>
                </div>
            {% endif %}

            {% block body %}{% endblock %}
            {% block javascripts %}{% endblock %}
        </div>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
        <!-- Latest compiled and minified JavaScript -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
    </body>
    <footer>

                <div class="row row-condensed">


                    <div class="col-sm-12 space-4 space-top-4">
                        <ul class="list-layout list-inline text-center h5">
                            <li><a href="/about/about-us" class="link-contrast">À propos</a></li>
                            <li><a href="http://blog.airbnb.com" class="link-contrast">Blog</a></li>
                            <li><a href="/terms" class="link-contrast">Conditions générales et confidentialité</a></li>
                        </ul>
                    </div>

                    <hr class="footer-divider space-top-8 space-4 hide-sm">

                    <div class="text-center">
                        <h2 class="h5 space-4 hide-sm">Rejoignez-nous sur</h2>
                        <ul class="list-layout list-inline" itemscope="" itemtype="http://schema.org/Organization">
                            <link itemprop="url" href="https://www.speakit.fr">
                            <meta itemprop="logo" content="https://a2.muscache.com/airbnb/static/logos/belo-200x200-4d851c5b28f61931bf1df28dd15e60ef.png">
                            <li>
                                <a href="https://www.facebook.com/speakit" class="link-contrast footer-icon-container" itemprop="sameAs" target="_blank">
                                    <!--<span class="screen-reader-only">Facebook</span>-->
                                    <i class="fa fa-lg fa-facebook"></i>
                                </a>        </li>

                            <li>
                                <a href="https://twitter.com/speakit" class="link-contrast footer-icon-container" itemprop="sameAs" target="_blank">
                                   <!-- <span class="screen-reader-only">Twitter</span>-->
                                    <i class="fa fa-lg fa-twitter"></i>
                                </a>        </li>

                            <li>
                                <a href="https://www.linkedin.com/company/speakit" class="link-contrast footer-icon-container" itemprop="sameAs" target="_blank">
                                    <!--<span class="screen-reader-only">LinkedIn</span>-->
                                    <i class="fa fa-lg fa-linkedin"></i>
                                </a>      </li>

                            <li>
                                <a href="https://instagram.com/speakit" class="link-contrast footer-icon-container" itemprop="sameAs" target="_blank">
                                   <!-- <span class="screen-reader-only">Instagram</span>-->
                                    <i class="fa fa-lg fa-instagram"></i>
                                </a>        </li>
                        </ul>
                        <div class="space-top-2 text-muted">
                            © Speakit, Inc.
                        </div>

        </div>
    </footer>
</html>
