{% block body %}
<div class="content">
    <!------------ FILTRES -------------->
    <div class="row filtres">
        <form >
            <div class="col-md-2">
                <select class="form-control" name="Langues">
                    <option>Langues</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div> <div class="col-md-2">
                <select class="form-control" placeholder="Age min">
                    <option>Age min</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div> <div class="col-md-2">
                <select class="form-control" placeholder="Age min">
                    <option>Age max</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div> <div class="col-md-3">
                <div class="checkbox">
                    <label>
                        <input type="checkbox"> Correspondants connect√©s
                    </label>
                </div>
            </div> <div class="col-md-1">
                <button class="btn btn-default" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                    <i class="fa fa-chevron-down"></i>
                </button>
            </div> <div class="col-md-2">
                <button type="submit" class="btn btn-default">Appliquer les filtres</button>
            </div>
            <div class="collapse" id="collapseExample">
                extension filtre
            </div>
        </form>
    </div>


    <!------------ MATCHING -------------->
    <div class="matching">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <ul>
                    {% for matchedUser in matchedUsers %}
                        <li class="row">
                            <a class="btn" href="{{path('edu_speak_profil',{'id':matchedUser.id})}}">
                                {% if app.user.facebookPicture %}
                                    <img class="profile-picture" src="{{ app.user.facebookPicture }}" alt="Profil" />
                                {% elseif app.user.file %}
                                    <img class="profile-picture" src="{{ app.user.file }}" alt="Profil" />
                                {% else %}
                                    <i class="fa fa-user fa-3x"></i>
                                {% endif %}
                            </a>
                            <h4>{{ matchedUser.username }}</h4>
                            <a class="start-conversation" href="{{path('chat_create',{'id':matchedUser.id})}}"><i class="fa fa-weixin fa-3x"></i></a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>


